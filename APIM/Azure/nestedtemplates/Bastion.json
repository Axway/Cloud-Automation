{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "vmName": {
        "type": "string"
      },
      "vmNicName": {
        "type": "string"
      },
      "vmDiskName": {
        "type": "string"
      },
      "vmAdminName": {
        "type": "string"
      },
      "vmAdminPWD": {
        "type": "securestring"
      },
      "subnetId": {
        "type": "string"
      },
      "publicIPAddressName": {
        "type": "string"
      },
      "dnsName": {
        "type": "string"
      },
      "publicIPAddressId": {
        "type": "string"
      }
    },
    "variables": {
      "imagePublisher": "OpenLogic",
      "imageOffer": "CentOS",
      "imageSKU": "7.5",
      "vmSize" : "Standard_D2_v2"
    },
    "resources": [
      {
        "apiVersion": "2015-05-01-preview",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[parameters('publicIPAddressName')]",
        "tags": {
          "displayName": "Public IP"
        },
        "location": "[resourceGroup().location]",
        "properties": {
          "publicIPAllocationMethod": "Dynamic",
          "dnsSettings": {
            "domainNameLabel": "[parameters('dnsName')]"
          }
        }
      },
        {
            "name": "[parameters('vmNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "Bastion Virtual Machine Nic"
              },
            "dependsOn": [
              "[parameters('publicIPAddressName')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                    "name": "InternalIp01",
                    "properties": {
                        "subnet": {
                            "id": "[parameters('subnetId')]"
                        },
                    "privateIPAllocationMethod": "Dynamic",
                    "publicIPAddress": {
                      "id": "[parameters('publicIPAddressId')]"
                      }
                    }
                }
              ]
            }
        },
        {
            "name": "[parameters('vmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "Bastion Virtual Machine"
              },
            "dependsOn": [
              "[concat('Microsoft.Network/networkInterfaces/', parameters('vmNicName'))]"
            ],
            "properties": {
              "hardwareProfile": {
                "vmSize": "[variables('vmSize')]"
              },
              "storageProfile": {
                "osDisk": {
                  "name": "[parameters('vmDiskName')]",
                  "createOption": "FromImage",
                  "managedDisk": {
                    "storageAccountType": "Standard_LRS"
                  }
                },
                "imageReference": {
                  "publisher": "[variables('imagePublisher')]",
                  "offer": "[variables('imageOffer')]",
                  "sku": "[variables('imageSKU')]",
                  "version": "latest"
                }
              },
              "networkProfile": {
                "networkInterfaces": [
                {
                  "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('vmNicName'))]"
                }
                ]
              },
              "osProfile": {
                "computerName": "[parameters('vmName')]",
                "adminUsername": "[parameters('vmAdminName')]",
                "adminPassword": "[parameters('vmAdminPWD')]"
              }
            }
        }
      ],
      "outputs": {}
    }